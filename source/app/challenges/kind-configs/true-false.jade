h3 {{ 'challenges_true-false_config_title' | translate }}

mas-form-group(field-name='trueanswer' localization-prefix='challenges_true-false_option_true')
  input.form-control(ng-model='ctrl.data.trueAnswerText' name='trueanswer' required)
mas-form-group(field-name='falseanswer' localization-prefix='challenges_true-false_option_false')
  input.form-control(ng-model='ctrl.data.falseAnswerText' name='falseanswer' required)

h4 {{ 'challenges_true-false_questions' | translate }}

div(style='margin-top: 10px' ng-repeat='question in ctrl.data.questions track by $index')
  mas-challenges-true-false-question(question='question' data='ctrl.data' index='$index')

mas-new-button-sm(ng-click='ctrl.addQuestion()' text="{{ 'challenges_true-false_question_add' | translate }}")
