.form-group(ng-class='{ "has-error" : ctrl.isValidAndSubmitted() }')
  label(ng-hide='ctrl.hideLabel') {{ ::ctrl.localizedName() | translate }}
  ng-transclude()
  p.help-block(ng-hide='ctrl.isValidAndSubmitted() || ctrl.hideHelp') {{ ctrl.localizedHelp() | translate  }}
  p.help-block(ng-show='!ctrl.hideError && ctrl.isValidAndSubmitted()') {{ ctrl.localizedError() | translate }}