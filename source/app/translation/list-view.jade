h1 Translations

.panel.panel-green
  .panel-heading
    | {{ 'areas_details_title' | translate }}
  .panel-body
    .row
      .col-md-3
        select.form-control(ng-model='ctrl.selectedModelConfig' ng-change='ctrl.selectedModelConfigChanged()'
                            ng-options='option.name for option in ctrl.modelConfigs track by option.name')
      .col-md-1
        | {{ctrl.currentModelIndex + 1}} of {{ctrl.translatables.length}}
      .col-md-2
        button.form-control(ng-click='ctrl.loadPreviousModel()') Previous
      .col-md-2
        button.form-control(ng-click='ctrl.loadNextModel()') Next
