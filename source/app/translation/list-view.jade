    .row
      .col-md-12
        .progress
          .progress-bar.progress-bar-success(ng-style='ctrl.getProgressBarStyle()')
            span {{(ctrl.currentTranslationProgress*100).toFixed(0)}}% Complete

    .row
      .col-md-6
        ul.nav.nav-tabs
          li.active
            a {{ctrl.mainLanguage}}
        form(name='form' role='form' novalidate readonly)
          mas-form-group(ng-repeat='field in ctrl.getTranslatable().fieldConfig' name='{{field.name}}' localization-prefix='{{field.prefix}}')
            mas-dynamic-input-component(input-type='{{field.inputType}}' bind-to='ctrl.getTranslatable().model[field.name]' name='{{field.name}}')

      .col-md-6
        ul.nav.nav-tabs
          li(ng-repeat='locale in ctrl.locales' ng-class='{active: ctrl.currentLanguage==locale}')
            a(ng-click='ctrl.currentLanguage=locale')
              | {{locale}}
              mas-percentage-ribbon(percentage="ctrl.getTranslatable().getTranslationProgress()[1][locale]")
        form(name='form' role='form' novalidate)
          mas-form-group(ng-repeat='field in ctrl.getTranslatable().fieldConfig' name='{{field.name}}' localization-prefix='{{field.prefix}}')
            mas-dynamic-input-component(input-type='{{field.inputType}}' bind-to='ctrl.getTranslatable().model.translations[ctrl.currentLanguage][field.name]' name='{{field.name}}')
      .col-md-4

mas-save-button(ng-click='ctrl.save()')
